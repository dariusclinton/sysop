{% extends "AppBundle::layout.html.twig" %}

{% block title %}Déposer un projet - {{ parent() }}{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/lib/select2/css/select2.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css') }}">

{% endblock stylesheets %}

{% block header %}
    {# header #}
    <div id="header2">
        <div class="jumbotron">
            <div class="col-md-12 text-center">
                <h1>Déposer un projet</h1>
            </div>
        </div>

    </div>
    {# end header #}
{% endblock header %}

{% block content %}

    <div id="deposer_projet_content">

        <div class="container">

            <div class="row">
                <div class="col-md-7">

                    {{ form_start(form) }}

                    {{ form_errors(form) }}

                    <div class="form-group">
                        <label>Objectif</label>
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.libelle) }}
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="form-group">
                        <label>Tarif (estimation du tarif en FCFA)</label>
                        {{ form_widget(form.tarif, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.tarif) }}
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-md-6">Date de début (estimation de la date de début)</label>
                            <div class="col-md-6">
                                 <div class='input-group date' id='datetimepicker1'>
                                    {{ form_widget(form.dateDebut) }}
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            {{ form_errors(form.dateDebut) }}
                        </div>
                    </div>

                    <div class="form-group">
                       <div class="row">
                            <label class="col-md-6">Date de fin (estimation de la date de fin)</label>
                            <div class="col-md-6">
                                 <div class='input-group date' id='datetimepicker1'>
                                    {{ form_widget(form.dateFin) }}
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            {{ form_errors(form.dateFin) }}
                           </div>
                    </div>

                    <div class="form-group">
                        <label>Localisation</label>
                        {{ form_widget(form.villes) }}
                        {{ form_errors(form.villes) }}
                    </div>

                    <div class="form-group">
                        <label>Spécialités requises par le projet</label>
                        {{ form_widget(form.specialites) }}
                        {{ form_errors(form.specialites) }}
                    </div>
                    
                    {{ form_rest(form) }}

                    <br>
                    <input type="submit" id="_submit" name="_submit" value="Déposer le projet"
                           class="btn btn-success btn-lg"/>

                    {{ form_end(form) }}

                </div>
                <div class="col-md-4 col-md-offset-1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well">
                                <h1>Facile et simple</h1>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatem error veniam
                                    consectetur ullam accusantium voluptatum quis ipsum cumque, dignissimos aut neque dolore
                                    impedit aliquid eos culpa quos voluptatibus distinctio inventore.
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="text-center">
                                        <i class="fa fa-money fa-4x"></i>
                                    </h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.Lorem ipsum dolor sit
                                        amet, consectetur adipisicing elit.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="text-center">
                                        <i class="fa fa-money fa-4x"></i>
                                    </h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.Lorem ipsum dolor sit
                                        amet, consectetur adipisicing elit.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>

{% endblock content %}


{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/app/lib/select2/js/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/lib/moment/moment-with-locales.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js') }}"></script>

    <script type="text/javascript">

        $(function() {

            $('.select2-ville').select2();
            $('.select2-specialites').select2();

            $('.js-datepicker').datetimepicker({
                format: 'DD/MM/YYYY'
            });

        });
    </script>

{% endblock javascripts %}