{% extends "@FOSUser/layout.html.twig" %}

{% block title %}
	Mes spécialités - {{ parent() }}
{% endblock %}

{% block fos_user_content_content %}

	<h3 class="page-header">Mes spécialités</h3>
	<div class="row">
		<div class="col-md-6">
            {% for sp in specialites_user %}
				<div class="row">
					<div class="col-md-6">{{ sp.nom }}</div>
					<div class="col-md-6"><a href="{{ path('user_travailleur_remove_specialite', {'specialite' : sp.id}) }}">Remove</a></div>
				</div>
            {% endfor %}
		</div>
		<div class="col-md-6">
			<form action="{{ path('user_travailleur_add_specialites') }}" >
				<div class="form-group">
					<label>Spécialité</label>
					<select class="form-control" name="specialite">
						<option value="specialite">--</option>
                        {% for sp in specialites %}
							<option value="{{ sp.id }}">{{ sp.nom }}</option>
                        {% endfor %}
					</select>
				</div>
				<div class="form-group">
					<button class="btn btn-primary">Ajouter</button>
				</div>
			</form>
		</div>
	</div>

{% endblock fos_user_content_content %}
