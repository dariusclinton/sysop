    {% block fos_user_content %}

        <div class="container" style="margin-top: 10px;">
            <div class="row">
                <div class="col-md-3">
                       
                    {% block fos_user_content_menu %}
                        <div class="text-center">
                            <img src="{{ asset('bundles/app/img/avatar-1.png') }}" class="img-responsive">
                            <h3>{{ app.user.username }}</h3>
                            <h5>{{ app.user.email }}</h5>
                        </div>

                        <div class="list-group">
                            <a class="list-group-item active"> Mon compte </a>
                            <a href="{{ path('fos_user_profile_edit') }}" class="list-group-item">
                                <i class="fa fa-edit"></i> 
                                Modifier mon compte
                            </a>
                            <a href="{{ path('fos_user_change_password') }}" class="list-group-item">
                                <i class="fa fa-lock"></i>  
                                Changer le mot de passe
                            </a>
                        </div>

                        {% if is_granted('ROLE_TRAVAILLEUR') %}
                            <div class="list-group">
                                <a class="list-group-item active">Mon profil</a>
                                <a href="{{ path('user_travailleur_specialites') }}" class="list-group-item">
                                    <i class="fa fa-home"></i>  
                                    Mes spécialités
                                </a>
                                <a href="{{ path('user_travailleur_agenda') }}" class="list-group-item">
                                    <i class="fa fa-calendar"></i>  
                                    Mon agenda
                                </a>
                                <a href="{{ path('user_travailleur_diplomes') }}" class="list-group-item">
                                    <i class="fa fa-home"></i>  
                                    Mes diplômes
                                </a>
                                <a href="{{ path('user_travailleur_experiences') }}" class="list-group-item">
                                    <i class="fa fa-home"></i>  
                                    Mes expériences
                                </a>
                            </div>
                        {% endif %}

                        <div class="">
                            <i class="fa fa-remove"></i> 
                            <a href="#" class="text-danger">Supprimer mon compte</a>
                        </div>

                    {% endblock fos_user_content_menu %}

                </div>
                <div class="col-md-9">
                    
                    {% block fos_user_content_content %}
                        
                    {% endblock fos_user_content_content %}

                </div>
            </div>
        </div>
        
    {% endblock fos_user_content %}

{% endblock content %}