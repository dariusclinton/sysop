<div class="container">
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3 class="page-header text-center">Connexion</h3>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
                    <div class="">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
                    <div class="">
                        <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>
                </div>

                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <div class="form-group">
                    <input type="submit" id="_submit" name="_submit" value="Se connecter" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

</div>